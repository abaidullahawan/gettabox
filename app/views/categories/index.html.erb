<!-- Main Content Header -->
<div class="main-content-header">
  <h1><%= link_to 'Categories', categories_path, style:'color: #212529;' %></h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">
      <span class="active">Index</span>
    </li>
  </ol>
</div>
<!-- End Main Content Header -->

<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <a href="/categories/new" class="btn btn-primary float-right">Create</a>
          <h5 class="card-title"> Data</h5>
        </div>
        <%= search_form_for @q, url: categories_path, method: :get do |f| %>
          <div class='row'>
            <div class='col-sm-1 offset-11'>
              <label for="inputState">Per Page</label>
              <%= select_tag :limit, options_for_select([5, 10, 15, 20], selected: params[:limit] || 10), id: 'change_per_page', class: 'form-control' %>
              <button type="submit" id="per_page_submit" hidden="hidden"></button>
            </div>
          </div>
          <br>
          <div class="table-responsive">
            <table class="table m-0 table-hover">
              <tr>
                <th><%= sort_link(@q, :id, 'ID') %></th>
                <th class="text-center"><%= sort_link(@q, :title, 'Tilte') %></th>
                <th colspan="3" class="text-center">Actions</th>
              </tr>
              <% @categories&.each&.with_index(1) do |category, index| %>
                <tr class=''>
                  <td><%= category.id %></td>
                  <td class="text-center"><%= category.title %></td>
                  <td class="text-center">
                    <a type="button" class="btn btn-link text-info p-0 mr-2" href="<%= category_path(category)%>">
                      <i data-feather="eye" class="icon wh-15"></i>
                    </a>
                    <a type="button" class="btn btn-link text-success p-0 mr-2" href="<%= edit_category_path(category)%>">
                      <i data-feather="edit-2" class="icon wh-15"></i>
                    </a>
                    <%= link_to '<i data-feather="x" class="icon wh-15"></i>'.html_safe, category_path(category), method: 'delete', data: {confirm: "Are you sure you want to delete"}, class: "btn btn-link text-danger p-0"%>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
        <br>
        <div class='float-right'>
          <%= page_entries_info @categories %>
        </div><br>
        <div class="pagination justify-content-center mt-3">
          <%= paginate @categories,theme: "twitter-bootstrap-4",pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
        </div>
      </div>
    </div>
  </div>
</div>