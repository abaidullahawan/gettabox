<div class="row vertical-pills-tab">
  <div class="col-sm-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" data-toggle="pill" href="#v-pills-system-user">Categories</a>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-system-user" role="tabpanel">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true, required: true, class: 'form-control', placeholder: 'Enter category title' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, autofocus: true, required: true, class: 'form-control', placeholder: 'Enter category description' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.submit(@category.new_record? ? "Create" : "Update", class: 'btn btn-primary mt-5') %>
</div>