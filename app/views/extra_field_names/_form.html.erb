<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <h5 class="card-title">Create</h5>
        </div>
            <%= form_for @extra_field_name, method: :post do |f| %>
            <div class="form-group">
                <%= f.label :field_name %>
                <%= f.text_field :field_name, autofocus: true, required: true, class: 'form-control', placeholder: 'Enter Field Name' %>
            </div>
            <div class="form-group">
                <%= f.label :table_name %>
                <%= f.select :table_name , @table_names,{include_blank: "Select Table"}, required: true, class: 'form-control'%>
            </div>
            <div class="form-group">
                <%= f.label :field_type %>
                <%= f.select :field_type , @field_names, {include_blank: "Select Type"}, required: true, class: 'form-control'%>
            </div>
            <div class="add-association-button d-none form-row">
              <div class="form-group col-md-12">
              <h4>Please Add Options for Dropdown</h4>
              <div class='links text-right'>
                <%= link_to_add_association '+', f, :extra_field_options, partial: 'extra_field_option', class: 'nested_fields_btn btn btn-outline-primary rounded'%>
              </div>
                <%= f.fields_for :extra_field_options do |option|%>
                  <%#= render 'extra_field_option', f: option %>
                <% end %>
              </div>
            </div>
            <div class="form-group">
            <%= f.submit "Create", class: 'btn btn-outline-primary mt-1'%>
            </div>
            <% end %>
            </div>
    </div>
  </div>
</div>
