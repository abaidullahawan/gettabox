<div class="form-row">
  <div class="form-group col-12">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Please enter name for forecasting', required: true %>
  </div>
  <div class="form-group col-12 mt-3">
    <div style='border-bottom: 1px solid;'>
      <h5 class='fs-14'>Filters</h5>
    </div>
    <div class="mt-3">
      <div class='links text-right'>
        <%= link_to_add_association 'Add Filter +', f, :channel_forecastings, partial: 'channel_forecasting_fields', class: 'nested_fields_btn btn btn-outline-primary rounded'%>
      </div>
      <%= f.fields_for :channel_forecastings do |forecasting|%>
        <%= render 'channel_forecasting_fields', f: forecasting %>
      <% end %>
    </div>
  </div>
</div>
