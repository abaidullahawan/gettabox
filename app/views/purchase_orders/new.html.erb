<!-- Main Content Header -->
<div class="main-content-header">
  <h1>Purchase Order</h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="<%= dashboard_sales_path %>">Dashboard</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= system_users_path %>">Suppliers</a>
    </li>
    <li class="breadcrumb-item active">
      <span class="active">Create</span>
    </li>
  </ol>
</div>
<!-- End Main Content Header -->
<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <h5 class="card-title">Create</h5>
        </div>
        <%= form_for @purchase_order, url: purchase_orders_path, method: :post do |f| %>
          <%#= render 'form', f: f %>
          <div class="row">
            <div class="col-lg-12">
              <!-- Faq accordion -->
              <div class="faq-accordion mb-30">
                <% @categories.each do |id, name| %>
                  <ul class="accordion">
                    <li class="accordion-item">
                      <a class="accordion-title" href="javascript:void(0)">
                        <i class="lni-plus"></i>
                        <%= name %>
                      </a>
                      <div class="table-responsive accordion-content">
                        <table class="table table-hover text-vertical-middle mb-0">
                          <thead class="bort-none borpt-0">
                            <tr>
                              <th scope="col"><strong>Image</strong></th>
                              <th scope="col" colspan='3'><strong>Title</strong></th>
                              <th scope="col"><strong>Deliverd/Ordered</strong></th>
                              <th scope="col"><strong>Stock</strong></th>
                              <th scope="col"><strong>Cost Price</strong></th>
                              <th scope="col"><strong>Quantity</strong></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @products[id].each do |product| %>
                              <tr>
                                <td>
                                  <% if product.photo.attached? %>
                                    <%= image_tag(product.photo&.service_url, width: "100", height: "100", class: 'mr-3 img-thumbnail', alt: 'User Image') %>
                                  <% else %>
                                    <%= image_tag('product/product6.jpg', width: "100", height: "100", class: 'mr-3 img-thumbnail', alt: 'User Image') %>
                                  <% end %>
                                </td>
                                <td colspan='3'>
                                  <h5><%= product.title %></h5><br>
                                  <strong>Description: </strong><%= product.description %><br>
                                  <strong>Product SKU: </strong><%= product.sku %><br>
                                  <strong>Supplier SKU: </strong><%= product.product_suppliers.find_by(system_user_id: @supplier).product_sku %>
                                </td>
                                <td>0/0</td>
                                <td><%= product.total_stock %></td>
                                <td><input class="form-control" type="text" placeholder="Price" style="width: 70px;"></td>
                                <td><input class="form-control" type="text" placeholder="Quantity" style="width: 70px;"></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                      </div>
                    </li>
                  </ul>
                <% end %>
              </div>
              <!-- End Faq accordion -->
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
