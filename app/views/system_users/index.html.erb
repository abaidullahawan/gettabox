<!-- Main Content Header -->
<div class="main-content-header">
  <h1><%= link_to 'Supplier', system_users_path, style:'color: #212529;' %></h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">
      <span class="active">Index</span>
    </li>
  </ol>
</div>
<!-- End Main Content Header -->

<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#ModalScrollable">
              Create
          </button>
          <span class='mr-1 float-right'>
            <%= form_tag import_system_users_path, multipart: true, method: :post do %>
              <%= file_field_tag :file, class: 'd-none import-file' %>
              <button type='button' class='btn btn-outline-success import-btn'>Import</button>
              <%= submit_tag "Import", class: 'd-none import-submit' %>
            <% end %>
          </span>
            <div class='mr-1 float-right'>
              <%= link_to 'Export', system_users_path(format: :csv, export_csv: true), class: 'btn btn-outline-primary' %>
            </div>
          <h5 class="card-title"> Data</h5>
        </div>
        <%= search_form_for @q, url: system_users_path, method: :get do |f| %>
          <div class='row'>
            <div class='col-1 offset-11'>
              <label for="inputState">Per Page</label>
              <%= select_tag :limit, options_for_select([10, 50, 100, 500, 1000], selected: params[:limit] || 10), id: 'change_per_page', class: 'form-control' %>
              <button type="submit" id="per_page_submit" hidden="hidden"></button>
            </div>
          </div>
          <br>
          <div class="table-responsive">
            <table class="table m-0 table-hover">
              <tr>
                <th>
                  <%= f.search_field :name_cont, class:"form-control", placeholder:"Search in Name", title: 'Search in Name' %>
                </th>
                <th>
                  <%= f.select :payment_method_eq, SystemUser.payment_methods.map { |key, value| [key.humanize, value] }, {include_blank: 'Select Type'}, class:"form-control", title: 'Select Payment Type' %>
                </th>
                <th>
                  <%= f.search_field :days_for_order_to_completion_eq, class:"form-control", placeholder:"Search in Order to Completion", title: 'Search in Order to Completion' %>
                </th>
                <th>
                  <%= f.search_field :days_for_completion_to_delivery_eq, class:"form-control", placeholder:"Search in Completion to Delivery",title: 'Search in Completion to Delivery' %>
                </th>
                <th>
                  <%= f.search_field :currency_symbol_cont, class:"form-control", placeholder:"Search in Currency Symbol",title: 'Search in Curreny Symbol' %>
                </th>
                <th>
                  <%= f.search_field :exchange_rate_eq, class:"form-control", placeholder:"Search in Exchange Rate",title: 'Search in Exchange Rate' %>
                </th>
                <th colspan='3', class=''>
                  <%= button_tag(class: 'btn btn- btn-outline-success rounded btn-xs') do %>
                    <i data-feather='search' class='icon wh-30'></i>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th class="text-center"><%= sort_link(@q, :name) %></th>
                <th class="text-center"><%= sort_link(@q, :payment_method) %></th>
                <th class="text-center"><%= sort_link(@q, :days_for_order_to_completion) %></th>
                <th class="text-center"><%= sort_link(@q, :days_for_completion_to_delivery) %></th>
                <th class="text-center"><%= sort_link(@q, :currency_symbol) %></th>
                <th class="text-center"><%= sort_link(@q, :exchange_rate) %></th>

                <th colspan="3" class="text-center">Actions</th>
              </tr>
              <% @system_users&.each&.with_index(1) do |system_user, index| %>
                <tr class=''>
                  <td class="text-center"><%= system_user.name %></td>
                  <td class="text-center"><%= system_user.payment_method %></td>
                  <td class="text-center"><%= system_user.days_for_order_to_completion %></td>
                  <td class="text-center"><%= system_user.days_for_completion_to_delivery %></td>
                  <td class="text-center"><%= system_user.currency_symbol %></td>
                  <td class="text-center"><%= system_user.exchange_rate %></td>

                  <td class="text-center">
                    <a type="button" class="btn btn-link text-info p-0 mr-2" href="<%= system_user_path(system_user)%>">
                      <i data-feather="eye" class="icon wh-15"></i>
                    </a>
                    <%= link_to '<i data-feather="x" class="icon wh-15"></i>'.html_safe, system_user_path(system_user), method: 'delete', data: {confirm: "Are you sure you want to delete"}, class: "btn btn-link text-danger p-0"%>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
        <br>
        <div class='float-right'>
          <%= page_entries_info @system_users %>
        </div><br>
        <div class="pagination justify-content-center mt-3">
          <%= paginate @system_users,theme: "twitter-bootstrap-4",pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="ModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title">Create Supplier</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>

          <div class="modal-body">
            <%= form_for @system_user, url: system_users_path, method: :post do |f| %>
              <%= render 'form', f: f %>
            <% end %>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary supplier-create">Save changes</button>
          </div>
      </div>
  </div>
</div>