<div class="row vertical-pills-tab">
  <div class="col-sm-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" data-toggle="pill" href="#v-pills-system-user">System Users</a>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-system-user" role="tabpanel">
        <div class="form-group">
          <%= f.label :sku %>
          <%= f.text_field :sku, autofocus: true, class: 'form-control', placeholder: 'Enter SKU' %>
        </div>
        <div class="form-group">
          <%= f.label :user_type %>
          <%= f.select(:user_type, SystemUser.user_types.map { |key, value| [key.humanize, key] }, {}, class: 'form-control', id: "exampleFormControlSelect1")%>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.submit(@system_user.new_record? ? "Create" : "Update", class: 'btn btn-primary mt-5') %>
</div>