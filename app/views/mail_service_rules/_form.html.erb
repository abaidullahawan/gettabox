<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="form-group">
          <%= check_box_tag :next_time %>
          <%= f.label "Save for Next Time" %>
        </div>
        <div class="form-group">
          <%= f.label 'Rule Name' %>
          <%= f.select :rule_name, options_for_select(MailServiceRule.all.collect { | rule | [rule.rule_name, rule.id] }),{}, class: 'form-control courier-value', placeholder: 'Please enter the Courier' %>
        </div>
        
      </div>
    </div>
  </div>
</div>