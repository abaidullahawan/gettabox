<!-- Main Content Header -->
<div class="main-content-header">
    <h1>Settings</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="<%= dashboard_sales_path %>">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            <span class="active">Settings</span>
        </li>
    </ol>
</div>
<!-- End Main Content Header -->

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-30">
            <div class="card-body">
                <div class="card-header">
                    <a href="/users/new" class="btn btn-primary float-right">Create</a>
                    <h5 class="card-title"><%= @user_sub_role.capitalize %> Data</h5>
                </div>

                <div class="table-responsive">
                    <table class="table m-0 table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Email</th>
                                <th class="text-center">Role</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% @users.each.with_index(1) do |user, index| %>
                            <tr>
                                <td><%= index %></td>
                                <td><%= user.email %></td>
                                <td class="text-center"><span class="badge badge-info"><%= user.role %></span></td>
                                <td class="text-center">
                                    <a type="button" class="btn btn-link text-success p-0 mr-2" href="<%= edit_user_path(user)%>">
                                        <i data-feather="edit-2" class="icon wh-15"></i>
                                    </a>
                                    <%= link_to '<i data-feather="x" class="icon wh-15"></i>'.html_safe, user_path(user), method: 'delete', data: {confirm: "Are you sure you want to delete"}, class: "btn btn-link text-danger p-0"%>
                                </td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>