<div class="profile-left-content">
  <div class="card mb-30">
    <div class="card-body">
      <div class="card-header">
        <h5 class="card-title">
          Personal Details
          <a type="button" class="btn btn-link text-secondary p-0 ml-3 float-right" data-toggle="modal" data-target="#personalModalScrollable">
            <i data-feather="edit-2" class="icon wh-15"></i>
          </a>
        </h5>
      </div>
      <ul class="info">
        <li>
          <i data-feather="align-justify" class="icon"></i>
          First Name: <%= @user.personal_detail.first_name %>
        </li>
        <li>
          <i data-feather="align-justify" class="icon"></i>
          Last Name: <%= @user.personal_detail.last_name %>
        </li>
        <li>
          <i data-feather="edit" class="icon"></i>
          Language: English
        </li>
        <li>
          <i data-feather="calendar" class="icon"></i>
          Birthday: <%= @user.personal_detail.dob %>
        </li>
        <li>
          <i data-feather="user" class="icon"></i>
          Gender: <%= @user.personal_detail.gender %>
        </li>
        <li>
          <i data-feather="mail" class="icon"></i>
          Email: example@gmail.com
        </li>
      </ul>
    </div>
  </div>
</div>

<!--Modal-->
<div class="modal fade" id="personalModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Personal Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(@user, url: user_path) do |f| %>
          <%= render '/users/form_partials/personal_form_partial', f: f %>
          <div class="form-group col-12">
            <%= f.submit(@user.new_record? ? "Create" : "Update", class: 'btn btn-outline-success rounded float-right mt-2') %>
            <button type="button" class="btn btn-secondary rounded float-right mt-2 mx-2" data-dismiss="modal">Close</button>
          </div><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
