<div class="nested-fields">
  <br>
  <div class='row'>
    <div class='col-lg-6 col-sm-12'>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, autofocus: true, class: 'form-control', placeholder: 'Enter your first name' %>
      </div>
    </div>
    <div class='col-lg-6 col-sm-12'>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your last name' %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-lg-6 col-sm-12'>
      <div class="form-group">
        <%= f.label :street_address %>
        <%= f.text_field :street_address, class: 'form-control' %>
      </div>
    </div>
    <div class='col-lg-6 col-sm-12'>
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-lg-6 col-sm-12'>
      <div class="form-group">
        <%= f.label :province %>
        <%= f.text_field :province, class: 'form-control' %>
      </div>
    </div>
    <div class='col-lg-6 col-sm-12'>
      <div class="form-group">
        <%= f.label :country %>
        <%= f.text_field :country, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-lg-6 col-sm-12'>
      <div class="form-group">
        <%= f.label :zip %>
        <%= f.number_field :zip, class: 'form-control' %>
      </div>
    </div>
  </div>
  <%= link_to_remove_association "Remove Contact", f, class: 'btn btn-outline-secondary rounded mb-3' %>
</div>

