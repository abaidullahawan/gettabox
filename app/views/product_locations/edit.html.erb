<h1>Editing Product Location</h1>
<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <h5 class="card-title">Edit</h5>
          <%= link_to "Delete", product_location_path( @product_location), method: :delete, class: "btn-lg btn-danger text-white float-right", style: 'margin-top:-3rem', data: {confirm: "Are you sure?"}%>
        </div>
        <%= form_for @product_location do |f| %>
          <div class="form-group">
            <%= f.label :location%>
            <%= f.text_field :location , class: 'form-control', placeholder: 'Enter Location'%>
          </div>
            <div class="form-group">
          <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
