<div class="row">
  <div class="col-lg-12">
    <div class="card mb-30">
      <div class="card-body">
        <%= form_tag order_dispatches_path,nav_class: "d-inline-b", class: "mb-3", method: :get do |f| %>
        <div class='col-md-12'>
          <div class='float-right'>
            <label for="inputState">Per Page</label>
            <%= select_tag :limit, options_for_select([5, 10, 15, 20], selected: params[:limit] || 10), id: 'change_per_page', class: 'form-control' %>
            <button type="submit" id="per_page_submit" hidden="hidden"></button>
          </div>
        </div>
        <% end %>
        <div class="table-responsive">
          <table class="table table-hover text-vertical-middle mb-0">
            <thead class="bort-none borpt-0">
              <tr>
                <th scope="col">Channel</th>
                <th scope="col">Order Information</th>
                <th scope="col">Buyer Email</th>
                <th scope="col">Date Received</th>
                <th scope="col">Total</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <% @orders.each do |order| %>
            <% order_data = JSON.parse(order.order_data) %>
              <tbody>
                <tr>
                  <td><strong><%= order&.channel_type %></strong></td>
                  <td>
                    <%= image_tag('user/1.jpg', class: 'wh-30 mr-1 rounded', alt: 'Image') %>
                    <%= order_data["buyer"]["username"] %>
                  </td>
                  <td><%= order_data["fulfillmentStartInstructions"][0]['shippingStep']["shipTo"]["email"]%></td>
                  <td><%= order_data["creationDate"].to_time.strftime("%m/%d/%Y %H:%M") %></td>
                  <td><%= order_data["pricingSummary"]["priceSubtotal"]["value"]%> <%= order_data["pricingSummary"]["priceSubtotal"]["currency"]%></td>
                  <td><span class="badge badge_warning py-1"><%= order_data["orderFulfillmentStatus"]%></span></td>
                  <td>
                    <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i data-feather='refresh-ccw' class='icon wh-15 mt-minus-3'></i>
                      Retry
                    </button>
                    <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i data-feather='x' class='icon wh-15 mt-minus-3'></i>
                      Hide
                    </button>
                  </td>
                </tr>
              </tbody>
            <% end %>
          </table>
          <div class='float-right'>
            <%= page_entries_info @orders %>
          </div><br>
          <div class="pagination justify-content-center mt-1">
            <%= paginate @orders,theme: "twitter-bootstrap-4",pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>