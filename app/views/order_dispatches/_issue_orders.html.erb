<div class="row">
  <div class="col-lg-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover text-vertical-middle mb-0">
            <thead class="bort-none borpt-0">
              <tr>
                <th>
                  <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitchAll">
                    <label class="custom-control-label" for="customSwitchAll"></label>
                  </div>
                </th>
                <th scope="col">Channel</th>
                <th scope="col">Order Information</th>
                <th scope="col">Listings</th>
                <th scope="col">Date Recieved</th>
                <th scope="col">Total</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <% @issue_orders.each do |order| %>
              <tbody>
                <tr>
                  <td>
                    <div class="custom-control custom-switch">
                      <input type="checkbox" class="custom-control-input customSwitch1" name="orders-switch" id="<%=order.id%>" <%= order.selected? ? 'checked': ''%>>
                      <label class="custom-control-label" for="<%=order.id%>"></label>
                    </div>
                  </td>
                  <td style = "width: 15%">
                    <%= render  'image_partial', order: order %>
                  </td>
                  <td>
                    <%= order.order_id %><br>
                    <%= order.buyer_username %><br>
                    <strong><b><%= order.buyer_name %></b></strong><br>
                    <%= order.system_user&.addresses&.find_by(address_title: 'delivery')&.address%>
                  </td>
                  <td>
                    <% order.channel_order_items.each do |order|%>
                      <%= order.sku %>
                    <% end %>
                  </td>
                  <td><%= order.created_at.strftime("%m/%d/%Y %H:%M") %></td>
                  <td><%= order.total_amount%></td>
                  <td><span class="badge badge_warning py-1"><%= order.order_status%></span></td>
                  <td>
                    <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i data-feather='refresh-ccw' class='icon wh-15 mt-minus-3'></i>
                      Retry
                    </button>
                    <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i data-feather='x' class='icon wh-15 mt-minus-3'></i>
                      Hide
                    </button>
                  </td>
                </tr>
              </tbody>
            <% end %>
          </table>
          <div class='float-right'>
            <%= page_entries_info @issue_orders %>
          </div><br>
          <div class="pagination justify-content-center mt-1">
            <%= paginate @issue_orders, :param_name => :orders_page,theme: "twitter-bootstrap-4",pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>