<div class="modal fade" id="mail-service-label-modal-<%=index%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Mail Service Information</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <% order_rule = order.mail_service_rule %>
            Service Name:  <%= order_rule.service_name %><br>
            Service Description:  <%= order_rule.rule_name %><br>
            Service Courier:  <%= order_rule.courier.name %><br><br>
            <% order_rule.mail_service_labels.each do |label| %>
            Weight: <%= label.weight %><br>
            Length: <%= label.length %><br>
            Width:  <%= label.width %><br>
            Height: <%= label.height %><br>
            <% end %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
</div>