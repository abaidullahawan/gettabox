<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="form-group">
          <%= f.check_box :save_later %>
          <%= f.label "Save for next orders (customized)" %>
        </div>
        <div class="form-group">
          <%= f.label 'Rule Name' %>
          <%= f.select :mail_service_rule_id, options_for_select(@mail_service_rules.collect { | rule | [rule.rule_name, rule.id] }, f.object.mail_service_rule_id),{}, class: 'form-control courier-value', placeholder: 'Please enter the Courier' %>
        </div>
        <div class="form-row">
          <div class='form-group col-md-12' style='border-bottom: 1px solid;'>
            <h5 class='fs-14'>Mail Service Label</h5>
          </div>
          <div class="form-group col-md-12">
          <div class='links text-right'>
            <%= link_to_add_association '+', f, :mail_service_labels, partial: 'mail_service_rules/mail_service_labels_fields', class: 'nested_fields_btn btn btn-outline-primary rounded'%>
          </div>
            <%= f.fields_for :mail_service_labels do |label|%>
              <%= render 'mail_service_rules/mail_service_labels_fields', f: label %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>