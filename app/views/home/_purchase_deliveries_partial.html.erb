<div class="col-lg-12 col-xl-6">
  <div class="card mb-30">
    <div class="card-body">
      <div class="card-header">
        <a href="<%= purchase_deliveries_path %>" class="btn btn-primary float-right">View all</a>
        <h5 class="card-title">Purchase Deliveries List</h5>
      </div>
      <div class="table-responsive">
        <div class="pagination justify-content-center">
          <%= paginate @purchase_deliveries,theme: "twitter-bootstrap-4",pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
        </div>
        <table class="table table-hover text-vertical-middle mb-0">
          <thead class="bort-none borpt-0">
            <tr>
              <th>Purchase Order</th>
              <th>Supplier</th>
              <th>Total Bill</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @purchase_deliveries.each do |purchase_delivery| %>
              <tr>
                <td>
                  <strong><%= purchase_delivery.purchase_order_id %></strong>
                </td>
                <td><%= purchase_delivery.purchase_order.system_user&.name %></td>
                <td class="text-center"><%= purchase_delivery.total_bill %></td>
                <td>
                  <span class="badge badge-info">
                    <span class="fw-600"><a class="link_tag" href="<%= purchase_delivery_path(purchase_delivery)%>">Show</a></span>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class='float-right mt-3'>
          <%= page_entries_info @purchase_deliveries %>
        </div>
      </div>
    </div>
  </div>
</div>
