<!-- Main Content Header -->
<div class="main-content-header">
  <h1>Order Dispatch</h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="<%= home_path %>">Dashboard</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= order_dispatches_path %>">Order Dispatch</a>
    </li>
    <li class="breadcrumb-item active">
      <span class="active">Logs</span>
    </li>
    <li class="ml-auto">
      <%= link_to 'Show', order_dispatch_path(id: @order.id), class: 'btn btn-primary text-white' %>
    </li>
  </ol>
</div>
<!-- End Main Content Header -->
<div class="row">
  <div class="col-lg-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header d-flex">
          <h5 class="card-title">
            Logs
          </h5>
          <div class='mr-1 ml-auto'>
            <%= link_to 'Export', export_order_dispatches_path(format: :csv, order_id: params[:id]), class:"btn btn-primary float-right ml-1", type:"button"%>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-hover text-vertical-middle mb-0">
            <thead class="bort-none borpt-0">
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Action</th>
                <th scope="col">System ID</th>
                <th scope="col">Channel order Id</th>
                <th scope="col">User</th>
              </tr>
            </thead>
            <tbody>
              <% @versions&.each_with_index do |version| %>
                <% if version.changeset.include? 'change_log' %>
                  <tr>
                    <% change_log = version.changeset["change_log"][1].split(',')%>
                    <td><%= version.created_at&.strftime('%m/%d/%Y') %></td>
                    <td><%= version.created_at&.strftime('%I:%M %p') %></td>
                    <td><%= change_log[0] %></td>
                    <td><%= change_log[1] %></td>
                    <td><%= change_log[2] %></td>
                    <td>
                      <%= change_log[3] %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
