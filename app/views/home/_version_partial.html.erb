<div class="row">
  <div class="col-lg-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <h5 class="card-title">
            Logs
          </h5>
        </div>
        <div class="table-responsive">
          <table class="table table-hover text-vertical-middle mb-0">
            <thead class="bort-none borpt-0">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Action</th>
                <th scope="col">Type</th>
                <th scope="col">Date</th>
                <th scope="col">User</th>
                <th scope="col">Changes</th>
              </tr>
            </thead>
            <tbody>
              <% @versions&.each do |version| %>
                <tr>
                  <td><strong><%= version.id %></strong></td>
                  <td><span class="badge badge-primary py-1"><%= version.event %></span></td>
                  <td> <%= version.item_type %> </td>
                  <td><%= version.created_at %></td>
                  <td><%= User.find(version.whodunnit)&.personal_detail&.full_name%></td>
                  <td>
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th scope="col">Field Name</th>
                          <th scope="col">From</th>
                          <th scope="col">To</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% version.changeset.excluding('updated_at').each do |change| %>
                          <tr>
                            <td><%= change[0] %></td>
                            <td><%= change[1][0] == nil ? 'nill' : change[1][0] %></td>
                            <td><%= change[1][1] %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
