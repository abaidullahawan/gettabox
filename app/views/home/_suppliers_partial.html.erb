<div class="col-lg-12 col-xl-5">
  <div class="card mb-30">
    <div class="card-body">
      <div class="card-header">
        <a href="<%= system_users_path %>" class="btn btn-primary float-right">View all</a>
        <h5 class="card-title">Suppliers List</h5>
      </div>
      <div class="table-responsive">
        <div class="pagination justify-content-center">
          <%= paginate @suppliers, :param_name => :supplier_page, theme: "twitter-bootstrap-4",pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
        </div>
        <hr>
        <table class="table table-hover text-vertical-middle mb-0">
          <thead class="bort-none borpt-0">
            <tr>
              <th>Supplier</th>
              <th>Total Products</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @suppliers.each do |supplier| %>
              <tr>
                <td>
                  <strong><%= supplier.name %></strong>
                </td>
                <td class="text-center">
                  <%= supplier.products&.count %>
                </td>
                <td>
                  <span class="badge badge-info">
                    <span class="fw-600"><a class="link_tag" href="<%= system_user_path(supplier)%>">View</a></span>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class='float-right'>
          <%= page_entries_info @suppliers %>
        </div>
      </div>
    </div>
  </div>
</div>
