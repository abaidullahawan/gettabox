<div class="col-lg-12">
  <div class="card text-center mb-30">
    <table class="table m-0 table-hover">
      <thead>
        <tr>
          <th class='border-right'>File 1</th>
          <th class='border-right'>File 2</th>
          <th class='border-right'>Created At</th>
          <th class='border-right'>Download</th>
        </tr>
      </thead>
        <tbody>
          <% @multifile_mapping.each do |multifile_maping| %>
            <% if multifile_maping.include? 'multi-mapping'%>
              <tr>
                <% created_at = multifile_maping.split('/').last.split('--').last %>
                <% @multifile_mapping_filename.each do |multifile_maping_name| %>
                  <% created_at_filename = multifile_maping_name.created_at + 5.hours %>
                  <% created_at_filename = created_at_filename.strftime('%d-%m-%Y @ %H:%M:%S') %>
                  <% if created_at_filename == created_at %>
                  <td><%= multifile_maping_name.file1 %></td>
                  <td><%= multifile_maping_name.file2 %></td>
                  <td><%= created_at %></td>
                  <td class='border-right'>
                    <%= link_to "Download", download_path(download: true, url: multifile_maping), download: '', class: "btn btn-primary text-white" %>
                    <%= link_to "Delete", download_path(download: false, url: multifile_maping), class: "btn btn-danger text-white", data: {confirm: "Are you sure?"} %>
                  </td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
    </table>
  </div>
</div>