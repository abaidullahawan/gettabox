<p id="notice"><%= notice %></p>

<h1>New Email Template</h1>
<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <h5 class="card-title">Create</h5>
        </div>
            <%= form_for @email_template, method: :post do |f| %>
            <div class="form-group">
                <%= f.label :template_type %>
                <%= f.select :template_type , @types, {},step: 0.01, class: 'form-control'%>
            </div>
            <div class="form-group">
                <%= f.label :template_name%>
                <%= f.select :template_name , @names, {},step: 0.01, class: 'form-control'%>
            </div>
            <div class="form-group">
                <%= f.label :subject%>
                <%= f.text_field :subject , class: 'form-control', placeholder: 'Enter Subject'%>
            </div>
            <div class="form-group">
                <%= f.label :body%>
                <%= f.text_area :body , class: 'form-control', placeholder: 'Enter Body'%>
            </div>
            <div class="form-group">
            <%= f.submit %>
            </div>
            <% end %>
            </div>
    </div>
  </div>
</div>
<div class="card mb-30">
  <table>
    <thead>
      <tr>
        <th>Template type</th>
        <th>Template name</th>
        <th>Subject</th>
        <th>Body</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @email_templates.each do |email_template| %>
        <tr>
          <td><%= email_template.template_type %></td>
          <td><%= email_template.template_name %></td>
          <td><%= email_template.subject %></td>
          <td><%= email_template.body %></td>
          <td><%= link_to 'View', email_template , class: 'btn btn-primary mb-1'%></td>
          <td><%= link_to 'Edit', edit_email_template_path(email_template), class: 'btn btn-info text-center mb-1' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Email Template', new_email_template_path %>
