<div class="notifications-card mb-30">
  <h5 class="noti-card-title">
    Product Location
    <button type='button' data-toggle="modal" data-target='#product-location-modal' class='btn btn-outline-success btn-sm float-right' style='margin:-10px;'>Edit</button>
  </h5>
  <div class="list-group">
    <div class="list-group-item">
      <div class='row'>
        <h5 class="fs-14 mb-1 col-4">Location</h5>
        <p class="m-0 col-8"><%= @product.product_location.location if  @product.product_location.present? %></p>
      </div>
    </div>
  </div>
</div>

<%= form_for(@product, url: product_path) do |f| %>
  <!-- Product Location Modal -->
  <div class="modal fade" id="product-location-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Product Location</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div>
            Inbound: <%= @product.total_stock %>
          </div>
          <div>
            <%= f.label :product_location_id %>
            <%= f.select :product_location_id, @product_location.collect { |location| [ location.location, location.id]}, {}, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit(@product.new_record? ? "Create" : "Save changes", class: 'btn btn-outline-primary') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
