<div class="notifications-card mb-30">
  <h5 class="noti-card-title">
    Stock Alert
    <button type='button' data-toggle="modal" data-target='#stock-modal' class='btn btn-outline-success btn-sm float-right' style='margin:-10px;'>Edit</button>
  </h5>
  <div class="list-group">
    <div class="list-group-item">
      <div class='row'>
        <h5 class="fs-14 mb-1 col-4">Minimum</h5>
        <p class="m-0 col-8"><%= @product.minimum %></p>
      </div><br>
      <div class='row'>
        <h5 class="fs-14 mb-1 col-4">Optimal</h5>
        <p class="m-0 col-8"><%= @product.optimal %></p>
      </div><br>
      <div class='row'>
        <h5 class="fs-14 mb-1 col-4">Maximum</h5>
        <p class="m-0 col-8"><%= @product.maximum %></p>
      </div>
    </div>
  </div>
</div>
<%= form_for(@product, url: product_path) do |f| %>
  <!-- Stock Modal -->
  <div class="modal fade" id="stock-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Stock Alert</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
              <%= render 'stock_fields', f: f %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit(@product.new_record? ? "Create" : "Save changes", class: 'btn btn-outline-primary') %>
        </div>
      </div>
    </div>
  </div>
<% end %>