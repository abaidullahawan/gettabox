<div class="notifications-card mb-30">
  <h5 class="noti-card-title">
    Extra
    <button type='button' data-toggle="modal" data-target='#extra-modal' class='btn btn-outline-success btn-sm float-right' style='margin:-10px;'>Edit</button>
  </h5>
  <div class="list-group">
    <div class="list-group-item">
      <div class='row'>
        <div class='col-6'>
          <h5 class="fs-14 mb-1">Pack Quantity</h5>
          <p class="m-0"><%= @product.pack_quantity %></p>
        </div>
        <!--div class='col-4'>
          <h5 class="fs-14 mb-1">Cost Price</h5>
          <p class="m-0"><%= @product.cost_price %></p>
        </div-->
        <div class='col-6'>
          <h5 class="fs-14 mb-1">Season</h5>
          <p class="m-0"><%= @product.season.name if @product.season.present? %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= form_for(@product, url: product_path) do |f| %>
  <!-- Extra Modal -->
  <div class="modal fade" id="extra-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Extra</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
              <%= render 'extra_fields', f: f %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit(@product.new_record? ? "Create" : "Save changes", class: 'btn btn-outline-primary') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
