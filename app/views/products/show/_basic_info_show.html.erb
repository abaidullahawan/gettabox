<div class="notifications-card mb-30">
  <h5 class="noti-card-title">
    Basic Info
    <button type='button' data-toggle="modal" data-target='#basic-info-modal' class='btn btn-outline-success btn-sm float-right' style='margin:-10px;'>Edit</button>
  </h5>
  <div class="list-group">
    <div class="list-group-item">
      <div class="row">
        <div class=col-2>
          <% if @product.photo.attached? %>
            <%= image_tag(@product.photo&.service_url, width: "100", height: "100", class: 'mr-3 img-thumbnail', alt: 'User Image') %>
          <% else %>
            <%= image_tag('user/1.jpg', width: "100", height: "100", class: 'mr-3 img-thumbnail', alt: 'User Image') %>
          <% end %>
        </div>
        <div class="col-10">
          <div class='row'>
            <div class='col-12'>
              <h4 class=""><%= @product.title %></h4>
              <p class="fs-14"><strong>Product SKU: </strong><%= @product.sku %></p>
              <p class="fs-14"><strong>Product Category: </strong><%= @product.category.title if @product.category.present? %></p>
              <p class="fs-14"><strong>Product Description: </strong><%= @product.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= form_for(@product, url: product_path) do |f| %>
  <!-- Basic Info Modal -->
  <div class="modal fade" id="basic-info-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Basic Info</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
              <%= render 'basic_info_fields', f: f %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit(@product.new_record? ? "Create" : "Save changes", class: 'btn btn-outline-primary') %>
        </div>
      </div>
    </div>
  </div>
<% end %>