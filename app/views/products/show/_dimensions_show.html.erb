<div class="notifications-card mb-30">
  <h5 class="noti-card-title">
    Dimensions/Weight
    <button type='button' data-toggle="modal" data-target='#dimensions-modal' class='btn btn-outline-success btn-sm float-right' style='margin:-10px;'>Edit</button>
  </h5>
  <div class="list-group">
    <div class="list-group-item">
      <div class='row'>
        <div class='col-3'>
          <h5 class="fs-14 mb-1">Length</h5>
          <p class="m-0"><%= @product.length %></p>
        </div>
        <div class='col-3'>
          <h5 class="fs-14 mb-1">Width</h5>
          <p class="m-0"><%= @product.width %></p>
        </div>
        <div class='col-3'>
          <h5 class="fs-14 mb-1">Height</h5>
          <p class="m-0"><%= @product.height %></p>
        </div>
        <div class='col-3'>
          <h5 class="fs-14 mb-1">Weight</h5>
          <p class="m-0"><%= @product.weight %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= form_for(@product, url: product_path) do |f| %>
  <!-- Dimensions Modal -->
  <div class="modal fade" id="dimensions-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Dimensions/Weight</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
              <%= render 'dimensions_fields', f: f %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit(@product.new_record? ? "Create" : "Save changes", class: 'btn btn-outline-primary') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
