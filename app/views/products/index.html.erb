<!-- Main Content Header -->
<div class="main-content-header">
    <h1>Products</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="<%= dashboard_sales_path %>">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            <span class="active">Products</span>
        </li>
    </ol>
</div>
<!-- End Main Content Header -->

<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <button type='button' data-toggle="modal" data-target='#product-create-modal' class='btn btn-primary float-right'>Create</button>
          <span class='mr-1 float-right'>
            <%= form_tag import_products_path, multipart: true, method: :post do %>
              <%= file_field_tag :file, class: 'd-none import-file' %>
              <button type='button' class='btn btn-outline-success import-btn'>Import</button>
              <%= submit_tag "Import", class: 'd-none import-submit' %>
            <% end %>
          </span>
          <div class='mr-1 float-right'>
            <%= link_to 'Export', products_path(format: :csv, export_csv: true), class: 'btn btn-outline-primary' %>
          </div>
          <div class='mr-1 float-right'>
            <%= link_to 'Archives', archive_products_path, class: 'btn btn-outline-info' %>
          </div>
          <h5 class="card-title"> Data</h5>
        </div>
        <%= search_form_for @q, url: products_path, method: :get do |f| %>
          <div class='row'>
            <div class='col-1 offset-11'>
              <label for="inputState">Per Page</label>
              <%= select_tag :limit, options_for_select([5, 10, 15, 20], selected: params[:limit] || 10), id: 'change_per_page', class: 'form-control' %>
              <button type="submit" id="per_page_submit" hidden="hidden"></button>
            </div>
          </div>
          <br>
          <div class="row my-1">
            <div class="col-md-2">
              <%= f.search_field :title_cont, class:"form-control", placeholder:"Search in title" %>
            </div>
            <div class="col-md-2">
              <%= f.search_field :sku_cont, class:"form-control", placeholder:"Search in Sku" %>
            </div>
            <div class="col-md-1">
              <button class="btn btn-info h-100 w-100" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Bulk
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to 'Archive', '#', data: {confirm: "Are you sure you want to archive"}, class:  'dropdown-item bulk-delete-products' %>
              </div>
            </div>
          </div>
        <% end %>

          <%= form_with url: bulk_method_products_path, method: :post do |f| %>
            <div class="table-responsive">
              <table class="table m-0 table-hover">
                <tr>
                  <th><input type="checkbox" id="" name="" value="" class='select-all-products'></th>
                  <th>Image</th>
                  <th>Title</th>
                  <th class="text-center">SKU</th>
                  <th class="text-center">Quantity (Total)</th>
                  <th colspan="3" class="text-center">Stock Alert</th>
                  <th>
                    <%#= select_tag "users[]", options_for_select(@users.collect{|x| [x.name,x.id]}), {:multiple => :multiple, :size => 10} %>
                  </th>
                </tr>
                <tr>
                  <th colspan='5'></th>
                  <th>Min</td>
                  <th>Opt</td>
                  <th>Max</td>
                  <th></th>
                </tr>
                <% @products&.each&.with_index(1) do |product, index| %>
                  <tr class='<%= (product.minimum.to_i > product.total_stock.to_i ) ? 'table-danger' : '' %>'>
                    <td><%= f.check_box 'product_ids[]', {}, product.id %></td>
                    <td>
                      <% if  product.photo.attached? %>
                        <%= image_tag product.photo&.service_url, style:'width:50px; height:50px;' %>
                      <% end %>
                    </td>
                    <td><%= product.title %></td>
                    <td class="text-center font-weight-bold"><%= product.sku %></td>
                    <td><%= product.total_stock%></td>
                    <td><%= product.minimum %></td>
                    <td><%= product.maximum %></td>
                    <td><%= product.optimal %></td>

                    <td class="text-center">
                      <div class="dropdown dropleft">
                        <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <i data-feather='bell' class='icon wh-15 mt-minus-3'></i>
                          Actions
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                          <a class="dropdown-item" href="<%= product_path(product)%>">Show</a>
                          <%= link_to 'Archive', product_path(product), method: 'delete', data: {confirm: "Are you sure you want to archive"}, class: "dropdown-item"%>
                        </div>
                      </div>
                    </td>
                  </tr>
                  <%= f.submit '', class: 'bulk-method-products d-none'%>
                <% end %>
              </table>
            </div>
          <% end %>

        <div class='float-right'>
          <%= page_entries_info @products %>
        </div><br>
        <div class="pagination justify-content-center mt-3">
          <%= paginate @products,theme: "twitter-bootstrap-4",pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_for(@product, url: products_path) do |f| %>
  <!-- Basic Info Modal -->
  <div class="modal fade" id="product-create-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Basic Info</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'form', f: f %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit(@product.new_record? ? "Create" : "Save changes", class: 'btn btn-outline-primary') %>
        </div>
      </div>
    </div>
  </div>
<% end %>