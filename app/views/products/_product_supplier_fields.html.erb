<div class="nested-fields">
  <br/>
  <div class="form-group row">
    <div class="col-11">
      <%= f.label  'Supplier Name' %>
      <%= f.select :system_user_id, @system_users&.map{|u| [u['name'], u['id']]}, {include_blank: 'Select a Product Supplier'}, class: 'form-control chosen-select' %>
    </div>
    <div class='col-1 pt-3'>
      <br>
      <%= link_to_remove_association 'X', f, class: 'text-danger' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label  'Product Cost' %>
      <%= f.number_field :product_cost, step: :any, placeholder: 'Please enter product cost', class: 'form-control', required: true %>
    </div>
    <div class="col-4">
      <%= f.label  'Supplier SKU' %>
      <%= f.text_field :product_sku, placeholder: 'Please enter product sku', class: 'form-control', required: true %>
    </div>
    <div class="col-4">
      <%= f.label  'Product Vat' %>
      <%= f.select :product_vat, options_for_select(ProductSupplier.product_vats.map { |key, value| [key.humanize, key] }, f.object.product_vat), {include_blank: "Please Select VAT"}, required: true, class: 'form-control' %>
    </div>
  </div>
</div>
