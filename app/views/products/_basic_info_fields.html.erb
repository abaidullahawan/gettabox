    <div class="form-group">
      <%= f.label :photo %>
      <% if  f.object.photo.attached? %>
        <%= image_tag f.object.photo&.service_url, style:'width:50px; height:50px;' %>
      <% end %>
      <%= f.file_field :photo, class: 'form-control' %>
    </div>
    <div class="form-group required">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Title', required: true %>
    </div>
    <div class="form-group required">
      <%= f.label :sku %>
      <%= f.text_field :sku, class: 'form-control', placeholder: 'Enter SKU', required: true %>
    </div>

    <div class="form-group required">
      <%= f.label :category_id %>
      <input name='category_name' class= 'form-control dropdown-toggle' id= 'category-title-search' data-toggle= 'dropdown' autocomplete= 'off' placeholder='Select the Category' %>
      <ul class="dropdown-menu category-dropdown-list" aria-labelledby="category-title-search">
        <li><a class="dropdown-item category-list-item" href="#">Search Category</a></li>
      </ul>
    </div>

    <div class="form-group form-row">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', placeholder: 'Add Product Description' %>
    </div>
