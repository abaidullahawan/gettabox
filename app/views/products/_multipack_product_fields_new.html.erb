<div class="nested-fields">
  <br>
  <div class="form-group row">
    <div class="col-8">
      <%= f.label 'Add Product' %>
      <%= f.select :child_id, @single_products&.map{|u| [u['title'], u['id']]}, {include_blank: 'Select a Product'}, class: 'form-control chosen-select', required: true %>
    </div>
    <div class="col-3">
      <%= f.label 'Quantity' %>
      <%= f.number_field :quantity, step: 0.5, class: 'form-control', placeholder: 'Enter Quantity' %>
    </div>
    <div class='col-1 pt-1'>
      <br>
      <%= link_to_remove_association 'X', f, class: 'text-danger' %>
    </div>
  </div>
</div>
