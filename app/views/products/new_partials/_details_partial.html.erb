
<div class="form-group form-row">
  <%= f.label :description %>
  <%= f.text_area :title, autofocus: true, class: 'form-control', placeholder: 'Add Product Description', required: true %>
</div>
<div class="form-row">
  <div class='form-group col-md-12' style='border-bottom: 1px solid;'>
    <h5 class='fs-14'>Dimensions*</h5>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :length %>
      <%= f.number_field :length, step: 0.01, class: 'form-control', placeholder: 'Enter Length in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :width %>
      <%= f.number_field :width, step: 0.01, class: 'form-control', placeholder: 'Enter Width in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :height %>
      <%= f.number_field :height, step: 0.01, class: 'form-control', placeholder: 'Enter Height in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :weight %>
      <%= f.number_field :weight, step: 0.01, class: 'form-control', placeholder: 'Enter Weight in (g)', required: true %>
  </div>
</div>
<div class="form-row detail-tax-field d-none">
  <div class='form-group col-md-12' style='border-bottom: 1px solid;'>
    <h5 class='fs-14'>Tax Field*</h5>
  </div>
  <div class="form-group col-md-12">
    <%= f.label :vat %>
    <%= f.number_field :vat, step: 0.01, class: 'form-control', placeholder: 'Enter VAT' %>
  </div>
</div>