<div class="form-row">
    <% if @field_names.present? %>
        <% @field_names&.each do |field_name| %>
            <% @product.extra_field_value.field_value.each do |extra_field|%>
            <% if extra_field[0] == field_name %>
            <div class="form-group col-md-6 required">
                <%= f.label :"#{field_name}" %>
                <%= f.text_field :"#{field_name}", value: extra_field[1] ,step: 0.01, class: 'form-control'%>
            </div>
            <% end %>
            <% end %>
        <% end %>
    <% end %>
</div>
