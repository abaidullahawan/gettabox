<div class="form-row">
  <div class="form-group col-md-6">
      <%= f.label :length %>
      <%= f.number_field :length, step: 0.01, class: 'form-control', placeholder: 'Enter Length in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :width %>
      <%= f.number_field :width, step: 0.01, class: 'form-control', placeholder: 'Enter Width in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :height %>
      <%= f.number_field :height, step: 0.01, class: 'form-control', placeholder: 'Enter Height in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :weight %>
      <%= f.number_field :weight, step: 0.01, class: 'form-control', placeholder: 'Enter Weight in (g)', required: true %>
  </div>
</div>