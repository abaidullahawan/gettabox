<div class="form-row">
  <div class="form-group col-md-6">
      <%= f.label :length %>
      <%= f.number_field :length, step: :any, class: 'form-control', placeholder: 'Enter Length in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :width %>
      <%= f.number_field :width, step: :any, class: 'form-control', placeholder: 'Enter Width in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :height %>
      <%= f.number_field :height, step: :any, class: 'form-control', placeholder: 'Enter Height in (mm)' %>
  </div>
  <div class="form-group col-md-6">
      <%= f.label :weight %>
      <%= f.number_field :weight, step: :any, class: 'form-control', placeholder: 'Enter Weight in (g)' %>
  </div>
</div>
<div class='form-row text-right clearfix'>
  <button type='button' class='btn btn-sm btn-info ml-auto next-tab-button col-2 offset-10 float-right'>Next</button>
</div>
