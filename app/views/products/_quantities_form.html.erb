<h6>Quantities:</h6>

<div class="form-row">
    <div class="form-group col-md-3">
        <%= f.label :total %>
        <%= f.number_field :total, class: 'form-control', placeholder: 'Enter Total Quantity' %>
    </div>
    <div class="form-group col-md-3">
        <%= f.label :fake_stock %>
        <%= f.number_field :fake_stock, class: 'form-control', placeholder: 'Enter Fake Stock Quantity' %>
    </div>
    <div class="form-group col-md-3">
        <%= f.label :pending_orders %>
        <%= f.number_field :pending_orders, class: 'form-control', placeholder: 'Enter Pending Orders Quantity' %>
    </div>
    <div class="form-group col-md-3">
        <%= f.label :allocated %>
        <%= f.number_field :allocated, class: 'form-control', placeholder: 'Enter Allocated Quantity' %>
    </div>
</div>