
<div class="row vertical-pills-tab">
  <div class="col-sm-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active v-pills-basic nav-tab-1-s nav-tab-1-m" data-toggle="pill" href="#v-pills-basic">Basicprofile</a>
      <a class="nav-link v-pills-quantity nav-tab-2-s" data-toggle="pill" href="#v-pills-quantity">Quantity</a>
      <a class="nav-link v-pills-dimensions nav-tab-3-s" data-toggle="pill" href="#v-pills-dimensions">Dimensions/Weight</a>
      <a class="nav-link v-pills-taxes nav-tab-4-s nav-tab-2-m" data-toggle="pill" href="#v-pills-taxes">Taxes</a>
      <a class="nav-link v-pills-stock nav-tab-5-s nav-tab-3-m" data-toggle="pill" href="#v-pills-stock">Stock Alert</a>
      <a class="nav-link v-pills-barcode nav-tab-6-s nav-tab-4-m" data-toggle="pill" href="#v-pills-barcode">Barcodes</a>
      <a class="nav-link v-pills-supplier nav-tab-7-s nav-tab-5-m" data-toggle="pill" href="#v-pills-supplier">Suppliers</a>
      <a class="nav-link v-pills-extra nav-tab-8-s nav-tab-6-m" data-toggle="pill" href="#v-pills-extra">Extra</a>
    </div>
  </div>

  <div class="col-sm-9">
      <div class="tab-content" id="v-pills-tabContent">
          <div class="tab-pane fade show active" id="v-pills-basic" role="tabpanel">
            <div class="form-group">
              <%= f.label :photo %>
              <%= f.file_field :photo, autofocus: true, class: 'form-control' %>
              <% if  f.object.photo.attached? %>
                <%= image_tag f.object.photo&.service_url, style:'width:50px; height:50px;' %>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Enter Title' %>
            </div>

            <div class="form-group">
              <%= f.label :sku %>
              <%= f.text_field :sku, class: 'form-control', placeholder: 'Enter SKU' %>
            </div>

            <div class="form-group">
              <%= f.label :product_type %>
              <%= f.select(:product_type, Product.product_types.map { |key, value| [key.humanize, key] }, {prompt: 'Please select user'}, class: 'form-control select_product_type', id: "exampleFormControlSelect1")%>
            </div>

            <div class='text-right clearfix'>
              <button type='button' class='btn btn-sm btn-info ml-auto next-tab-button'>Next</button>
            </div>

          </div>
          <div class="tab-pane fade" id="v-pills-quantity" role="tabpanel">
            <%= render 'quantities_fields', f: f %>
          </div>
          <div class="tab-pane fade" id="v-pills-dimensions" role="tabpanel">
            <%= render 'dimensions_fields', f: f %>
          </div>
          <div class="tab-pane fade" id="v-pills-taxes" role="tabpanel">
            <%= render 'taxes_fields', f: f %>
          </div>
          <div class="tab-pane fade" id="v-pills-stock" role="tabpanel">
            <%= render 'stock_fields', f: f %>
          </div>
          <div class="tab-pane fade" id="v-pills-barcode" role="tabpanel">
            <div class='links text-right'>
              <%= link_to_add_association 'Add barcode', f, :barcodes, class: 'btn btn-outline-primary rounded'%>
            </div>
            <%= f.fields_for :barcodes do |barcode|%>
              <%= render 'barcode_fields', f: barcode %>
            <% end %>
          </div>
          <div class="tab-pane fade" id="v-pills-supplier" role="tabpanel">
            <div class='links text-right'>
              <%= link_to_add_association 'Add Product Supplier', f, :system_users, class: 'btn btn-outline-primary rounded'%>
            </div>
            <%= f.fields_for :system_users do |supplier|%>
              <%= render 'system_user_fields', f: supplier %>
            <% end %>
          </div>
          <div class="tab-pane fade" id="v-pills-extra" role="tabpanel">
            <%= render 'extra_fields', f: f %>
          </div>
      </div>
  </div>
</div>

<div class="form-group">
  <%= f.submit(@product.new_record? ? "Create" : "Update", class: 'btn btn-primary mt-5') %>
</div>