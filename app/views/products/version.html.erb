<div class="main-content-header">
  <h1> <%= @product.present? ? 'Products' : 'Inventory' %></h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="<%= home_path %>" role="button">Dashboard</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= products_path %>">Products</a>
    </li>
    <li class="breadcrumb-item active">
      <span class="active">Versions</span>
    </li>
    <% if @product.present? %>
      <li class="ml-auto">
        <%= link_to @product.sku, product_path(@product), class: 'btn btn-primary text-white' %>
      </li>
    <% end %>
  </ol>
</div>
<% if params[:inventory_log].present? %>
  <div class="faq-accordion mb-30">
    <ul class="accordion">
      <li class="accordion-item">
        <a class="accordion-title" href="javascript:void(0)">
          <i class="lni-plus"></i>
          Product Logs
        </a>
        <div class="accordion-content">
          <div class="row">
            <div class="col-lg-12">
              <div class="card mb-30">
                <div class="card-body">
                  <div class="card-header">
                    <h5 class="card-title">
                      Logs
                    </h5>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th scope="col">Case</th>
                          <th scope="col">Date</th>
                          <th scope="col">Time</th>
                          <th scope="col">Action</th>
                          <th scope="col">Sku</th>
                          <th scope="col">Product ID</th>
                          <th scope="col" class="text-center">Result</th>
                          <th scope="col">User</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% index = 0%>
                        <% @products.each do |product| %>
                          <% product.versions.each do |version| %>
                            <% if version.changeset.include? 'available_stock' %>
                              <tr>
                                <td><%= index+=1 %></td>
                                <td><%= version.created_at&.strftime('%m/%d/%Y') %></td>
                                <td><%= version.created_at&.strftime('%I:%M %p') %></td>
                                <td>Manual Edit</td>
                                <td><strong><%= product.sku %></strong></td>
                                <td><%= product.id %></td>
                                <td><%= version.changeset["available_stock"][1].to_i - version.changeset["available_stock"][0].to_i %></td>
                                <td><%= version.whodunnit.present? ? User.find_by(id: version.whodunnit)&.personal_detail&.full_name : 'Developer' %></td>
                              </tr>
                            <% end %>
                          <% end %>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>

  <!--  Channel Order Accordian  -->

  <div class="faq-accordion mb-30">
    <ul class="accordion">
      <li class="accordion-item">
        <a class="accordion-title" href="javascript:void(0)">
          <i class="lni-plus"></i>
          Channel Order Logs
        </a>
        <div class="accordion-content">
          <div class="row">
            <div class="col-lg-12">
              <div class="card mb-30">
                <div class="card-body">
                  <div class="card-header">
                    <h5 class="card-title">
                      Logs
                    </h5>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th scope="col">Case</th>
                          <th scope="col">Date</th>
                          <th scope="col">Time</th>
                          <th scope="col">Action</th>
                          <th scope="col">Sku</th>
                          <th scope="col">Product ID</th>
                          <th scope="col" class="text-center">Result</th>
                          <th scope="col">User</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% index = 0%>
                        <% @products.each do |product| %>
                          <% product.versions.each do |version| %>
                            <% if version.changeset.include? 'available_stock' %>
                              <tr>
                                <td><%= index+=1 %></td>
                                <td><%= version.created_at&.strftime('%m/%d/%Y') %></td>
                                <td><%= version.created_at&.strftime('%I:%M %p') %></td>
                                <td>Manual Edit</td>
                                <td><strong><%= product.sku %></strong></td>
                                <td><%= product.id %></td>
                                <td><%= version.changeset["available_stock"][1].to_f - version.changeset["available_stock"][0].to_f %></td>
                                <td><%= version.whodunnit.present? ? User.find_by(id: version.whodunnit)&.personal_detail&.full_name : 'Developer' %></td>
                              </tr>
                            <% end %>
                          <% end %>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
<% else %>
  <div class="row">
    <div class="col-lg-12">
      <div class="card mb-30">
        <div class="card-body">
          <div class="card-header">
            <h5 class="card-title">
              Logs
            </h5>
          </div>
          <div class="table-responsive">
            <table class="table table-hover text-vertical-middle mb-0">
              <thead class="bort-none borpt-0">
                <tr>
                  <th scope="col">Date</th>
                  <th scope="col">Time</th>
                  <th scope="col">Action</th>
                  <th scope="col">System ID</th>
                  <th scope="col">Channel ID</th>
                  <th scope="col">Channel Item ID</th>
                  <th scope="col">Changed</th>
                  <th scope="col">Result</th>
                  <th scope="col">User</th>
                </tr>
              </thead>
              <tbody>
                <% @versions&.each do |version| %>
                  <% if version.changeset.include? 'change_log' %>
                    <tr>
                      <td><%= version.created_at&.strftime('%m/%d/%Y') %></td>
                      <td><%= version.created_at&.strftime('%I:%M %p') %></td>
                      <td>
                        <% if version.changeset.include? 'change_log' %>
                          <%= version.changeset["change_log"][1].split(',')[3] %>
                        <% else %>
                          Manual Edit
                        <% end %>
                      </td>
                      <td>
                        <% if version.changeset.include? 'change_log' %>
                          <%= version.changeset["change_log"][1].split(',')[1] %>
                        <% else %>
                          Manual Edit
                        <% end %>
                      </td>
                      <td>
                        <% if version.changeset.include? 'change_log' %>
                          <%= version.changeset["change_log"][1].split(',')[2] %>
                        <% else %>
                          Manual Edit
                        <% end %>
                      </td>
                      <td><% if version.changeset.include? 'change_log' %>
                          <%= version.changeset["change_log"][1].split(',')[4] %>
                        <% else %>
                          Manual Edit
                        <% end %>
                      </td>
                      <td><%= version.changeset["available_stock"][1].to_i - version.changeset["available_stock"][0].to_i if version.changeset.include? 'available_stock'  %></td>
                      <td><%= version.changeset["available_stock"][1].to_i if version.changeset.include? 'available_stock' %></td>
                      <td><%= version.whodunnit.present? ? User.find_by(id: version.whodunnit)&.personal_detail&.full_name : 'Developer' %></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>