<!-- Main Content Header -->
<div class="main-content-header">
  <h1><%= link_to 'Season', seasons_path, style:'color: #212529;' %></h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">
      <span class="active">/ Create</span>
    </li>
  </ol>
</div>
<!-- End Main Content Header -->
<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <h5 class="card-title">Create</h5>
        </div>
        <%= form_for @season, url: seasons_path, method: :post do |f| %>
          <%= render 'form', f: f %>
          <div class="form-group">
            <%= f.submit(@season.new_record? ? "Create" : "Update", class: 'btn btn-primary mt-5 float-right') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>