<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, required: true, class: 'form-control', placeholder: 'Enter Name' %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, required: true, class: 'form-control', placeholder: 'Enter Name' %>
</div>
<div class="form-group">
  <%= f.submit(@season.new_record? ? "Create" : "Update", class: 'btn btn-outline-primary rounded float-right') %>
</div>
